<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetsActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/idTabLayout"
        style="@style/Widget.MaterialComponents.TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idtabCachorro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Cachorro"
            android:contextClickable="true"
            android:text="Cachorro" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idtabGato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Gato"
            android:contextClickable="true"
            android:text="Gato" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idtabPassaro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Passaro"
            android:contextClickable="true"
            android:text="PÃ¡ssaro" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/idViewPagerPets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idTabLayout" />
</RelativeLayout>